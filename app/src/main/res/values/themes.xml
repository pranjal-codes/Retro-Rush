<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetroRush" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="TitleStyle" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:lineSpacingMultiplier">0.75</item>
    </style>

    <style name="NunitoRegularStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="NunitoSemiBoldStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>
</resources>